<%- include('./include/_header') %>
<div class="container pt-5">
    <a href="/">All User</a>
    <h2 class="pt-5">Update User Form</h2>
    <div id="update-form-result"></div>
    <form id="updateStudent">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="hidden" name="id" class="form-control" id="id" value="<%= user.id%>">
            <input type="text" name="name" class="form-control" id="name" value="<%= user.name%>">
        </div>

        <div class="form-group">
            <label for="age">Age: :</label>
            <input type="text" name="age" class="form-control" id="name" value="<%= user.age%>">
        </div>
        <input type="submit" value="Update User" class="btn btn-primary" id="update-user-submit-btn">
    </form>
</div>
<%- include('./include/_footer') %>